<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->


        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="colorAccent">@color/blue500</item>

    </style>

    <style name="ChecklistsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="colorAccent">@color/red500</item>
    </style>

        <!-- ActionBar styles -->
        <style name="MyActionBar"
            parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
            <item name="android:background">@color/blue500</item>

            <!-- Support library compatibility -->
            <item name="background">@color/blue500</item>
        </style>

    <style name="NotesRowItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">#616161</item>
    </style>

    <style name="ChecklistsItem">


        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>

        <item name="android:layout_marginLeft">30dp</item>

        <item name="android:textColor">#616161</item>
        <item name="android:textSize">16sp</item>

        <item name="android:layout_weight">1</item>


    </style>

    <style name="CheckMark">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>

        <item name="android:layout_marginLeft">5dp</item>

    </style>

    <style name ="EditNotesTitleLabel" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue500</item>
    </style>

    <style name ="EditNotesTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name ="EditNotesBodyLabel" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue500</item>
    </style>

    <style name ="EditNotesBody" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">16sp</item>
    </style>

    <color name="blue500">#2196F3</color>
    <color name="red500">#F44336</color>

</resources>
